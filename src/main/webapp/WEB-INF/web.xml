<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
id="WebApp_ID" version="4.0">


  <display-name>bhawanhomeworkwebapp</display-name>
  <welcome-file-list>
    <welcome-file>register.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>


  <servlet>
  <servlet-name>ser</servlet-name>
  <servlet-class>myserlvets.welcomeServlet</servlet-class>  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ser</servlet-name>
  <url-pattern>/Wel</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>ser2</servlet-name>
  <servlet-class>myserlvets.registerServlet</servlet-class>  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ser2</servlet-name>
  <url-pattern>/reg</url-pattern>
  </servlet-mapping>
  
   <servlet>
  <servlet-name>ser3</servlet-name>
  <servlet-class>myserlvets.loginServlet</servlet-class>  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ser3</servlet-name>
  <url-pattern>/log</url-pattern>
  </servlet-mapping>

</web-app>